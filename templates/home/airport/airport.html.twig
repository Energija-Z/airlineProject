<h1>List of airports:</h1>
<a href="/airport/create">Create an airport</a>
<a href="/">Return to homepage</a>

<table>
    <thead>
        <tr>
            <th>Name</th>
            <th>Code</th>
            <th>Country</th>
            <th>Location</th>
        </tr>
    </thead>
    <tbody>
        {% for i in airports %}
            <tr>
                <td>{{i.name}}</td>
                <td>{{i.code}}</td>
                <td>{{i.country}}</td>
                <td>{{i.location}}</td>
            </tr>
        {% endfor %}
    </tbody>
</table>